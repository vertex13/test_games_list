<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <com.github.vertex13.gameslist.presentation.gameslist.GameCategoryView
            android:id="@+id/mostAnticipatedGamesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gcv_item_height="@dimen/game_item_height_wide"
            app:gcv_item_width="@dimen/game_item_width_wide"
            app:gcv_title="@string/game_category_title_most_anticipated" />

        <com.github.vertex13.gameslist.presentation.gameslist.GameCategoryView
            android:id="@+id/latestGamesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gcv_item_height="@dimen/game_item_height_narrow"
            app:gcv_item_width="@dimen/game_item_width_narrow"
            app:gcv_title="@string/game_category_title_latest" />

        <com.github.vertex13.gameslist.presentation.gameslist.GameCategoryView
            android:id="@+id/mostRatedGamesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gcv_item_height="@dimen/game_item_height_wide"
            app:gcv_item_width="@dimen/game_item_width_wide"
            app:gcv_title="@string/game_category_title_most_rated_2020" />

    </LinearLayout>

</ScrollView>
